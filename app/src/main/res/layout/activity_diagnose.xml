<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white"
    tools:context=".DiagnoseActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_back_gray" />

        <ImageView
            android:id="@+id/notificationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/ic_notification_gray" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/notificationBtn"
            app:srcCompat="@drawable/ic_search_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Chi tiết chuẩn đoán"
            android:textColor="#120000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Chi tiết chuẩn đoán" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:elevation="20dp"
            app:srcCompat="@drawable/small_white_curved_rectangle" />

        <RelativeLayout
            android:id="@+id/diagnose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageView3"
            android:layout_alignEnd="@id/imageView3"
            android:layout_alignTop="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:elevation="21dp">

            <TextView
                android:id="@+id/DiagnoseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chẩn đoán: "
                android:textColor="#120000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/DiagnoseTitle"
                android:text="Sởi"
                android:textColor="#120000"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Time"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/diagnose"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:elevation="21dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/diagnoseTitle"
                android:text="18:10 24/3/2023"
                android:textColor="#120000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/diagnoseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian: "
                android:textColor="#120000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_below="@id/Time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:elevation="21dp"
            app:srcCompat="@color/black"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <RelativeLayout
            android:id="@+id/Description"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView7"
            android:layout_alignEnd="@id/imageView3"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:elevation="21dp">

            <TextView
                android:id="@+id/DescriptionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/descriptionTitle"
                android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,"
                android:textColor="#120000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả tình trạng: "
                android:textColor="#120000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Probability"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Description"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:elevation="21dp">

            <TextView
                android:id="@+id/ProbabilityContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ProbabilityTitle"
                android:text="100%"
                android:textColor="#120000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ProbabilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tỉ lệ chính xác: "
                android:textColor="#120000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Probability"
            android:layout_alignEnd="@id/imageView3"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_alignBottom="@id/imageView3"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:elevation="21dp">

            <TextView
                android:id="@+id/suggenstionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/suggestionTitle"
                android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,"
                android:textColor="#120000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/suggestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lời khuyên: "
                android:textColor="#120000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <android.widget.Button
            android:id="@+id/contactDoctorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:text="Liên hệ bác sĩ"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:shadowDy="4"
            android:background="@drawable/shape_button01"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/rateDiagnosisBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactDoctorBtn"
            android:text="Đánh giá chuẩn đoán"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:shadowDy="4"
            android:background="@drawable/shape_button01"
            android:textColor="@color/white"/>

</RelativeLayout>

</RelativeLayout>