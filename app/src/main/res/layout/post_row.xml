<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rounded_corner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/rounded_corner"
            app:srcCompat="@drawable/thumbnail01" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/postTitleTv"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên nhân khiến da trẻ nhỏ bị nổi nốt trắng li ti"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timestampTv"
                android:layout_marginTop="5dp"
                android:layout_below="@id/postTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viêm da cơ địa, ngứa nhiều, bé gãi nhiều, đưa vi khuẩn từ móng tay xâm nhập..." />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>