<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded_corner">
        <item name="cornerSize">20dp</item>
    </style>
    <style name="EditTextTitleTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#80FFFFFF</item> <!-- Màu chân khi không được chọn -->
        <item name="colorControlActivated">@color/white</item> <!-- Màu chân khi được chọn -->
    </style>
    <style name="EditTextContentTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/transparent</item> <!-- Màu chân khi không được chọn -->
        <item name="colorControlActivated">#80777777</item> <!-- Màu chân khi được chọn -->
    </style>
    <style name="TextInputLayoutNoUnderline" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>



</resources>